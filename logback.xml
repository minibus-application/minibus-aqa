<configuration>
    <conversionRule conversionWord="coloring"
                    converterClass="org.minibus.aqa.core.common.handlers.TestLoggerColorConverter"/>

    <appender name="COLOR" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>
                %coloring(%d{HH:mm:ss.SSS} %thread %-5level: %msg%n)
            </pattern>
        </encoder>
    </appender>
    <appender name="NOCOLOR" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} %thread %-5level: %msg%n
            </pattern>
        </encoder>
    </appender>
    <root level="debug">
        <if condition='isDefined("color")'>
            <then>
                <appender-ref ref="COLOR"/>
            </then>
            <else>
                <appender-ref ref="NOCOLOR"/>
            </else>
        </if>
    </root>
</configuration>